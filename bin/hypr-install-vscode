#!/bin/bash

echo "Installing VSCode..."
sudo yay -S --noconfirm --needed visual-studio-code-bin

mkdir -p ~/.vscode ~/.config/Code/User

cat > ~/.vscode/argv.json << 'EOF'
// This configuration file allows you to pass permanent command line arguments to VS Code.
// Only a subset of arguments is currently supported to reduce the likelihood of breaking
// the installation.
//
// PLEASE DO NOT CHANGE WITHOUT UNDERSTANDING THE IMPACT
//
// NOTE: Changing this file requires a restart of VS Code.
{
  "password-store":"gnome-libsecret"
}
EOF

# Ensure VSC's own auto-update feature is turned off
printf '{
  "update.mode": "none"
}
' > ~/.config/Code/User/settings.json

# Apply Hyprland theme to VSCode (will be recreated as hypr-theme-set-vscode later)
# hypr-theme-set-vscode

setsid gtk-launch code
